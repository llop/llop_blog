/*
 *= require_self
*/

/** By element */
body { background-color:#FFFFFF; font-family:"trebuchet ms"; font-size:0.9em;  }
hr { border-style:none; border-top:1px dotted; margin-bottom:10px; }
a { text-decoration:none; color:#555555; } 

/** By id */
#body_wrapper { width:1000px; margin:auto; overflow:auto; }
#header { width:1000px; height:100px; background:url(<%= asset_path 'header.png' %>); } 
#content_wrapper { width:700px; float:left; } 
#sidebar { width:300px; float:right; }

/** By class */
.blue_border { border-color:blue; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.red_border { border-color:red; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.green_border { border-color:#00AA00; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.black_border { border-color:black; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.regular_border { padding:10px; margin:10px; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.sidebar_box { padding:10px; margin:10px; margin-left:0px; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.sidebar_subbox { margin:10px; }
.menu_element { background:url(<%= asset_path 'pg.gif' %>); background-repeat:no-repeat; padding-left:20px; margin:2px; margin-left:0px; }
.tag_element { background:url(<%= asset_path 'tg.gif' %>); background-repeat:no-repeat; padding-left:20px; margin:2px; margin-left:0px; }
.cal_element { background:url(<%= asset_path 'sg.gif' %>); background-repeat:no-repeat; padding-left:20px; margin:2px; margin-left:0px; }
.com_element { background:url(<%= asset_path 'cg.gif' %>); background-repeat:no-repeat; padding-left:20px; margin:2px; margin-left:0px; }
.nav_element { background:url(<%= asset_path 'fw.gif' %>); background-repeat:no-repeat; padding-left:20px; margin:2px; margin-left:0px; }
.cal { background:url(<%= asset_path 'cal.gif' %>); background-repeat:no-repeat; }
/* dynamic_form */
.errorExplanation { padding:0px 15px 0px 15px; margin-bottom:15px; border-style:solid; border-width:1px; border-color:red; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
.field_with_errors { float:left; }
.pagination a, .pagination em, .pagination span { border-color:blue; border-style:solid; border-width:1px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; padding:2px 5px 2px 5px; }
.previous_page { background:url(<%= asset_path 'bk.gif' %>); background-repeat:no-repeat; background-position:left; }
.next_page { background:url(<%= asset_path 'fw.gif' %>); background-repeat:no-repeat; background-position:right; }

pre { background-color:white;	border-color:blue; border-width:1px;	border-style:solid;	padding:15px 15px 12px 15px; -moz-border-radius:0.3em; -webkit-border-radius:0.3em; border-radius:0.3em; }
pre .normal {}
pre .keyword { color: #000099; font-weight: bold; }
pre .punct { color: #0033FF; font-weight: bold; }
pre .string { color: #0033FF; }
pre .ident { color: #000044; }
pre .comment { color: #006633; font-style: italic; }
pre .symbol { color: #CC0000; }
pre .number { color: #33CCFF; }
pre .attribute { color: #0000CC; }
pre .class { color: #000099; }
pre .module { color: #000099; }
pre .constant { color: #000099; }
pre .regex { color: #0033FF; }
pre .method { color: #007777; }
pre .char { color: #FF0077; }
pre .global { color: #77FFBB; }
pre .expr { color: #222277; }
pre .escape { color: #227777; }
