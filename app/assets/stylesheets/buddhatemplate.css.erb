/*
 *= require_self
*/

body {
	background-color: #000;
	background-image: url(<%= asset_path 'Buddhaground.jpg' %>);
	background-repeat: no-repeat;
	font-family: Verdana, Geneva, sans-serif;
	color: #F90;
}

#main_inner {
	width: 905px;
}

#menu_div {
	float: left;
	width: 200px;
	font-size: 15px;
	font-weight: bold;
}

#menu_wrapper {
}

#content_div {
	width: 675px;
	border: 1px;
	border-color: #FFF;
	border-style: solid;
	padding: 10px;
	background-color: #000;
	float: right;
}

#content_wrapper {
}

#articulo, #appendix, #applets, #galeria {
	text-align: left;
	text-decoration: none;
	width: 193px;
	color: #F90;
	padding: 4px;
	cursor: pointer;
}

#sitios_relacionados {
	text-align: left;
	text-decoration: none;
	width: 193px;
	color: #F90;
	padding: 4px;
}

#articulo_menu, #appendix_menu, #applets_menu, #galeria_menu, #sitios_relacionados_menu {
	position: relative;
}

#articulo_wrapper, #appendix_wrapper, #applets_wrapper, #galeria_wrapper, #sitios_relacionados_wrapper {
	text-align: left;
	text-decoration: none;
	background-color: #000;
	width: 198px;
	color: #FFF;
	border: 1px;
	border-style: solid;
	margin-bottom: 4px;
}

#menu_item {
	border: 1px;;
	border-color: #FC0;
	border-style: solid;
	color: #FFF;
	font-size: 12px;
	font-weight: normal;
	padding: 3px;
	margin: 3px;
}

#menu_link {
	text-decoration: none; 
	color: #FFF;
	font-size: 12px;
	font-weight: normal;
}

#title {
	font-size: 20px;
	font-weight: bold;
	padding: 10px;
	text-align: left;
}

#navigation_div {
	border: 1px;
	border-color: #FFF;
	border-style: solid;
	padding: 5px;
	background-color: #000;
	margin-top: 5px;
	font-size: 12px;
	text-align: left;
}

#post {
	text-align: left;
	color: #FFF;
	font-size: 12px;
	font-weight: normal;
}

#p_title {
	margin-top: 20px;
	text-indent: 30px;
	color: #F60;
	font-size: 15px;
	font-weight: bold;
	padding: 5px;
}

#img_table {
	border: 1px;
	border-style: solid;
}

#img_table_title {
	font-weight: bold;
	color: #F90;
	padding: 5px;
}

#li_padded {
	padding: 4px;
	color: #FFF;
	font-size: 12px;
}

p {
	text-indent: 30px;
}

#comments_suggestions_div {
	float: right;
	width: 675px;
	border: 1px;
	border-color: #FFF;
	border-style: solid;
	padding: 10px;
	background-color: #000;
	margin-top: 10px;
	margin-bottom: 10px;
	font-size: 12px;
	text-align: justify;
}

#code_div {
	padding-left: 30px;
	padding-right: 10px;
	border: 1px;
	border-color: #FFF;
	border-style: solid;
	font-size: 12px;
	background-color: #333;
}

.m_l { text-decoration: none; color:white; }

#keyword {
	color: #FF0;
	font-weight: bolder;
}

#comment {
	color:#0F0;
	font-style: italic;
}

#string {
	color: #96F;
	font-style: italic;
	font-weight: bolder;
}
a { text-decoration:none; color:#00E; } 